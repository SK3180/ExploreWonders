<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".explore">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/navigationbg"
                android:fontFamily="@font/avanir"
                android:gravity="center"
                android:text="Explore"
                android:textColor="#FFFFFF"
                android:padding="7dp"
                android:textSize="40sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="209dp"
                    android:layout_height="188dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_home"
                    android:src="@drawable/ladakh2"

                    />

                <TextView
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/avanir"
                    android:gravity="center"
                    android:text="Leh of Ladakh"
                    android:textColor="@color/black"
                    android:textSize="25dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avanir"
                    android:gravity="center"
                    android:text="Taj Mahal"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <ImageView
                    android:layout_width="209dp"
                    android:layout_height="188dp"
                    android:layout_gravity="end"

                    android:background="@drawable/button_home"
                    android:src="@drawable/tajmahal"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kochi"
                    android:layout_width="209dp"
                    android:layout_height="188dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_home"
                    android:src="@drawable/kerala2"

                    />

                <TextView
                    android:layout_width="182dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avanir"
                    android:gravity="center"
                    android:text="Kochi"
                    android:textColor="@color/black"
                    android:textSize="25dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avanir"
                    android:gravity="center"
                    android:text="Golden Temple"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <ImageView
                    android:layout_width="209dp"
                    android:layout_height="188dp"
                    android:layout_gravity="end"
                    android:background="@drawable/button_home"
                    android:src="@drawable/amritsar"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="209dp"
                    android:layout_height="188dp"
                    android:layout_marginBottom="50dp"

                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_home"
                    android:src="@drawable/mysorepalace"

                    />

                <TextView
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/avanir"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="Mysore palace"
                    android:textColor="@color/black"
                    android:textSize="25dp" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="414dp"
        android:layout_height="56dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/navigationbg"
        android:gravity="center"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"

            android:padding="5sp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/explore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:padding="5sp"
            android:background="@drawable/citybg"
            android:src="@drawable/explore" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:padding="5sp"
            android:src="@drawable/category" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:padding="5sp"
            android:src="@drawable/heart" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:padding="5sp"
            android:src="@drawable/user" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>